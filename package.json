{
  "name": "bangui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/protocol/lib"
  ],
  "scripts": {
    "build": "tsc --build && npm run build -w @bangui/app",
    "clean": "tsc --build --clean && rm -rf packages/*/dist",
    "dev": "concurrently -n agent,app -c green,magenta \"npm run dev -w @bangui/agent\" \"npm run dev -w @bangui/app\"",
    "start": "concurrently -n agent,app -c green,magenta \"npm run start -w @bangui/agent\" \"npm run start -w @bangui/app\"",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
